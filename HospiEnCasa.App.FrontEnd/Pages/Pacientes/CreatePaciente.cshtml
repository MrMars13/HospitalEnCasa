@page
@using HospiEnCasa.App.Dominio
@model HospiEnCasa.App.FrontEnd.Pages.CreatePacienteModel
@{
}
<h1>Agregar Nuevo Paciente</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="PacienteNuevo.Id" />
    <div class="form-group row">
        <label asp-for="PacienteNuevo.Nombre" class="col-sm-2">Nombre</label>
        <input asp-for="PacienteNuevo.Nombre" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.Apellidos" class="col-sm-2">Apellidos</label>
        <input asp-for="PacienteNuevo.Apellidos" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.NumeroTelefono" class="col-sm-2">Número de teléfono</label>
        <input asp-for="PacienteNuevo.NumeroTelefono" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.Genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="PacienteNuevo.Genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.Direccion" class="col-sm-2">Dirección</label>
        <input asp-for="PacienteNuevo.Direccion" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.Latitud" class="col-sm-2">Latitud</label>
        <input asp-for="PacienteNuevo.Latitud" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.Longitud" class="col-sm-2">Longitud</label>
        <input asp-for="PacienteNuevo.Longitud" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.Ciudad" class="col-sm-2">Ciudad</label>
        <input asp-for="PacienteNuevo.Ciudad" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="PacienteNuevo.FechaNacimiento"></label>
        <input asp-for="PacienteNuevo.FechaNacimiento" class="form-control">
        <span class="text-danger" asp-validation-for="PacienteNuevo.FechaNacimiento"></span>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-success"> Guardar </button>
        <a asp-page="./ListMedico" class="btn btn-primary"> Cancelar </a>
    </div>
</form>