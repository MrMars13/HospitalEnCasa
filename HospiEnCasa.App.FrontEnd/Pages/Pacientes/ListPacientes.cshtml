@page
@model HospiEnCasa.App.FrontEnd.Pages.ListPacientesModel
@{
}
<h1>Lista de pacientes</h1>
<a class="btn btn-primary" asp-page="./CreatePaciente">Agregar Paciente</a>
<table class="table table-dark">
    <tr>
        <th scope="col">Nombres</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Número telefono</th>
        <th scope="col">Genero</th>
        <th scope="col">Dirección</th>
        <th scope="col">Ciudad</th>
        <th scope="col">Acciones</th>
    </tr>
    @foreach (var paciente in Model.Pacientes)
    {
        <tr>
            <td>@paciente.Nombre</td>
            <td>@paciente.Apellidos</td>
            <td>@paciente.NumeroTelefono</td>
            <td>@paciente.Genero</td>
            <td>@paciente.Direccion</td>
            <td>@paciente.Ciudad</td>
            <td><a class="btn btn-primary table-btn" asp-page="./DetailPaciente" asp-route-id="@paciente.Id">Detalles</a>
                <a class="btn btn-primary table-btn" asp-page="./EditPaciente" asp-route-id="@paciente.Id">Editar</a>
                <a class="btn btn-primary table-btn" asp-page="./RemovePaciente" asp-route-id="@paciente.Id">Eliminar</a>
                <br>
        </tr>
    }
</table>
