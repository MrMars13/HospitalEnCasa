@page
@model HospiEnCasa.App.FrontEnd.Pages.EditPacienteModel
@using HospiEnCasa.App.Dominio;
@{
}
<h1>Editar Paciente</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="Paciente.Id" />
    <div class="form-group row">
        <label asp-for="Paciente.Nombre" class="col-sm-2">Nombre</label>
        <input asp-for="Paciente.Nombre" class="form-control"  required>
    </div>
    <div class="form-group row">
        <label asp-for="Paciente.Apellidos" class="col-sm-2">Apellidos</label>
        <input asp-for="Paciente.Apellidos" class="form-control"  required>
    </div>
    <div class="form-group row">
        <label asp-for="Paciente.NumeroTelefono" class="col-sm-2">Número de teléfono</label>
        <input asp-for="Paciente.NumeroTelefono" class="form-control"  required>
    </div>
    <div class="form-group row">
        <label asp-for="Paciente.Genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="Paciente.Genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Paciente.Direccion" class="col-sm-2">Dirección</label>
        <input asp-for="Paciente.Direccion" class="form-control"  required>
    </div>
    <div class="form-group row">
        <label asp-for="Paciente.Latitud" class="col-sm-2">Latitud</label>
        <input asp-for="Paciente.Latitud" class="form-control"  required>
    </div>
     <div class="form-group row">
        <label asp-for="Paciente.Longitud" class="col-sm-2">Longitud</label>
        <input asp-for="Paciente.Longitud" class="form-control"  required>
    </div>
    <div class="form-group row">
        <label asp-for="Paciente.Ciudad" class="col-sm-2">Ciudad</label>
        <input asp-for="Paciente.Ciudad" class="form-control"  required>
        <br />
        <div class="form-group row">
            <button type="submit" class="btn btn-success"> Guardar </button>
            <a asp-page="./ListPacientes" class="btn btn-primary"> Cancelar </a>
        </div>
</form>
