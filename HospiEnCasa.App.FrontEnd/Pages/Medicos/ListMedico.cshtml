@page
@model HospiEnCasa.App.FrontEnd.Pages.ListMedicoModel
@{
}
<h1>Gestionar médicos</h1>
<p>En esta página podras gestionar los médicos</p>
<a class="btn btn-primary-btn" asp-page="./CreateMedico">Agregar médico</a>
<table class="table table-dark">
    <tr>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Número telefono</th>
      <th scope="col">Genero</th>
      <th scope="col">Especialidad</th>
      <th scope="col">Código</th>     
      <th scope="col">Registro Rethus</th>     
    </tr>
    @foreach (var medico in Model.medicos){
        <tr>
            <td>@medico.Nombre</td>
            <td>@medico.Apellidos</td>
            <td>@medico.NumeroTelefono</td>
            <td>@medico.Genero</td>
            <td>@medico.Especialidad</td>
            <td>@medico.Codigo</td>
            <td>@medico.RegistroRethus</td>
            <td><a class="btn btn-primary table-btn" asp-page="./DetailMedico" asp-route-id="@medico.Id">Detalles</a>
            <a class="btn btn-primary table-btn" asp-page="./EditMedico" asp-route-id="@medico.Id">Editar</a>
            <br>
        </tr>      
    }
</table>
