@page
@model HospiEnCasa.App.FrontEnd.Pages.CreateMedicoModel
@using HospiEnCasa.App.Dominio;
@{
}
<h1>Detalle médico</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="MedicoNuevo.Id" />
    <div class="form-group row">
        <label asp-for="MedicoNuevo.Nombre" class="col-sm-2">Nombre</label>
        <input asp-for="MedicoNuevo.Nombre" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="MedicoNuevo.Apellidos" class="col-sm-2">Apellidos</label>
        <input asp-for="MedicoNuevo.Apellidos" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="MedicoNuevo.NumeroTelefono" class="col-sm-2">Número de teléfono</label>
        <input asp-for="MedicoNuevo.NumeroTelefono" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="MedicoNuevo.Genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="MedicoNuevo.Genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MedicoNuevo.Especialidad" class="col-sm-2">Especialidad</label>
        <input asp-for="MedicoNuevo.Especialidad" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="MedicoNuevo.Codigo" class="col-sm-2">Código</label>
        <input asp-for="MedicoNuevo.Codigo" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="MedicoNuevo.RegistroRethus" class="col-sm-2">Registro Rethus</label>
        <input asp-for="MedicoNuevo.RegistroRethus" class="form-control" value="" required>
        <br />
        <div class="form-group row">
            <button type="submit" class="btn btn-success"> Guardar </button>
            <a asp-page="./ListMedico" class="btn btn-primary"> Cancelar </a>
        </div>
</form>